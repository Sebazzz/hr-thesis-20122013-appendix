@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Person>
              

<form method="POST" action="@this.Path">
    <div class="row-fluid">
        <div class="span6">@(this.Html.Name(m => m.UniqueId))</div>
        <div class="span6"><input type="text" name="UniqueId" value="@Model.UniqueId.ToStringInvariant()" readonly="readonly"/></div>
    </div>
    
    <div class="row-fluid">
        <div class="span6">@(this.Html.Name(m => m.FullName))</div>
        <div class="span6"><input type="text" name="FullName" value="@Model.FullName"/></div>
    </div>
    
    <div class="row-fluid">
        <div class="span6">@(this.Html.Name(m => m.HouseNumber))</div>
        <div class="span6"><input type="text" name="HouseNumber" value="@Model.HouseNumber.ToString()" /></div>
    </div>
    
    <div class="row-fluid">
        <div class="span6">@(this.Html.Name(m => m.BirthDate))</div>
        <div class="span6"><input type="text" name="BirthDate" value="@Model.BirthDate"/></div>
    </div>
    
    <div class="row-fluid">
        <div class="span6">@(this.Html.Name(m => m.RegistrationDate))</div>
        <div class="span6"><input type="text" name="RegistrationDate" value="@Model.RegistrationDate.ToString()" readonly="readonly"/></div>
    </div>

    <p>
        <input type="submit" name="submit" id="submit" class="btn btn-primary btn-large" value="Save" />
        <a href="/persons/">Cancel</a>        
    </p>
</form>