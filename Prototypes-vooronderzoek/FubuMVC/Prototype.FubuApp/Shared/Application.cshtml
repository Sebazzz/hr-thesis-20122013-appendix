@using System
@using FubuMVC.Core.UI
@using FubuMVC.Core.Runtime
@using Prototype.FubuApp.Core

@{
    ISessionState session = this.ServiceLocator.GetInstance<ISessionState>();
    OtherCulture culture = session.Get<OtherCulture>();
}

<!DOCTYPE html>

<html>
  <head>
      <title>@R.Global.ApplicationTitle</title>
      
      <style type="text/css">
          header,nav,footer, #body {
              border-bottom: 1px solid black;
              margin-bottom: 2em;
          }
        
          #body {
              border-top: 2px solid black;
              border-bottom: 2px solid black;
          }         
      </style>
      <link rel="stylesheet" href="/Content/themes/base/jquery-ui.css" type="text/css"/>
      <script type="text/javascript" src="/Scripts/jquery-1.9.1.min.js"></script>
      <script type="text/javascript" src="/Scripts/jquery-ui-1.10.1.min.js"></script>
  </head>
  <body>
      <div>
          <header>
              <h1>@R.Global.ApplicationTitle</h1> 
              
              <span style="float:right">
                  <a href="?LetterCultureName=@culture.LetterCultureName">@culture.DisplayName</a>
              </span>
          </header>
          
          <nav>
              <ul>
                  <li>@(this.LinkTo<Prototype.FubuApp.Pages.Home.HomeInputModel>().Text(R.Home.Title))</li>
                  <li>@(this.LinkTo<Prototype.FubuApp.Pages.Persons.IndexInputModel>().Text(R.PersonalData.Title))</li>
                  <li>@(this.LinkTo<Prototype.FubuApp.Pages.Report.ReportInputModel>().Text(R.Report.Title))</li>
              </ul>
          </nav>

          <div id="body">
              @RenderBody()
          </div>
          
          <footer>
              Copyright &copy; 2013
          </footer>
      </div>
  </body>
</html>